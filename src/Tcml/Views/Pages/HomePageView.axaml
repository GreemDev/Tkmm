<UserControl x:Class="Tcml.Views.Pages.HomePageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="using:Tcml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="using:Tcml.ViewModels.Pages"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="pages:HomePageViewModel"
             mc:Ignorable="d">
    <Grid>
        <Button Margin="0,0,50,0"
                HorizontalAlignment="Right"
                Command="{Binding SetStatusCommand}"
                Content="Set Status" />
        <TextBlock Margin="60,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="{StaticResource TCMLTitleFont}"
                   FontSize="60"
                   Foreground="{DynamicResource SystemAccentColor}"
                   Text="{x:Static app:App.CondensedAppName}" />
        <TextBlock Margin="20,0,0,90"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="30">
            Description
        </TextBlock>
        <TextBlock Margin="15"
                   VerticalAlignment="Bottom"
                   Text="{Binding Description}" />
    </Grid>
</UserControl>
