<Application x:Class="Tcml.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <FontFamily x:Key="UbuntuMono">avares://Tcml/Assets/Fonts/UbuntuMono/#Ubuntu Mono</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme />
        <StyleInclude Source="avares://ConfigFactory.Avalonia/Themes/Fluent/ConfigFactory.Avalonia.axaml" />
        <StyleInclude Source="/Styles/MenuItem.axaml" />
    </Application.Styles>
</Application>
